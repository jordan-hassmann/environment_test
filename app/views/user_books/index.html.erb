<p id="notice"><%= notice %></p>

<h1>User Books</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Book Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_books.each do |user_book| %>
      <tr>
        <td><%= User.find(user_book.user_id).username %></td>
        <td><%= Book.find(user_book.book_id).title %></td>
        <td><%= link_to 'Show', user_book %></td>
        <td><%= link_to 'Edit', edit_user_book_path(user_book) %></td>
        <td><%= link_to 'Destroy', user_book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div>
  <div>
    <%= link_to 'New User Book', new_user_book_path %>
  </div>
  <div>
    <%= link_to 'Book index', books_url %>
  </div>
  <div>
    <%= link_to 'User index', users_url %>
  </div>
</div>
